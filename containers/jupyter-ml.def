Bootstrap: docker
From: jupyter/minimal-notebook:latest

%post
    # Update and install system dependencies
    apt-get update && apt-get install -y \
        build-essential \
        git \
        curl \
        wget \
        vim \
        && rm -rf /var/lib/apt/lists/*
    
    # Install Python packages (all on fewer lines to avoid issues)
    pip install --no-cache-dir \
        jupyterhub==3.1.1 \
        nbclassic==0.3.7 \
        batchspawner \
        jupyter ipykernel ipywidgets notebook jupyterlab \
        torch torchvision \
        numpy scipy pandas h5py \
        matplotlib seaborn plotly \
        scikit-learn \
        python-lsp-server black isort flake8 \
        tqdm

%environment
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8

%runscript
    exec jupyter lab --ip=0.0.0.0 --no-browser

%labels
    Author martin@gmx.at
    Version v1.0
